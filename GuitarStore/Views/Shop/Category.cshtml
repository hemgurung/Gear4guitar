@model IEnumerable<GuitarStore.Models.ViewModels.Shop.ProductVM>

@{
    ViewBag.Title = ViewBag.CategoryName;
}

<h2>@ViewBag.CategoryName</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        <th>
            Brand
        </th>
        <th>
            Image
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                £@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                <a href="/shop/product-details/@item.Slug">
                    <img src="/Images/Uploads/Products/@item.Id/Thumbs/@item.ImageName" />
                </a>
            </td>
            <td>
                <a href="/shop/product-details/@item.Slug">Details</a>
            </td>
        </tr>
    }

</table>
